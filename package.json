{
  "name": "vsc-code-block-copier",
  "displayName": "Code Block Copier",
  "description": "Copy code blocks with line numbers and file paths for documentation and sharing",
  "version": "0.0.4",
  "publisher": "dumitory-dev",
  "private": false,
  "license": "MIT",
  "author": "dumitory-dev",
  "engines": {
    "vscode": "^1.90.0"
  },
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#1E1E1E",
    "theme": "dark"
  },
  "categories": [
    "Other",
    "Formatters",
    "Snippets"
  ],
  "keywords": [
    "code",
    "block",
    "copy",
    "line numbers",
    "formatting",
    "documentation",
    "sharing",
    "export"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dumitory-dev/vsc-copy-code-block.git"
  },
  "bugs": {
    "url": "https://github.com/dumitory-dev/vsc-copy-code-block/issues"
  },
  "homepage": "https://github.com/yourusername/vsc-code-block-copier#readme",
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vsc-code-block-copier.copyCodeBlock",
        "title": "Code Block Copier: Copy Code Block"
      },
      {
        "command": "vsc-code-block-copier.copyCodeBlockAppend",
        "title": "Code Block Copier: Copy Code Block (Append)"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -w -p .",
    "package": "vsce package",
    "vscode:prepublish": "npm run compile",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.90.0",
    "@vscode/test-electron": "^2.5.2",
    "mocha": "^11.7.5",
    "typescript": "^5.7.3",
    "vsce": "^2.15.0"
  }
}
